# Database
PARSEDMARC_DB_PATH=./data/parsedmarc.db

# Security - IMPORTANT: Generate a new key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
PARSEDMARC_ENCRYPTION_KEY=CHANGE_ME_GENERATE_NEW_KEY

# Authentication
PARSEDMARC_GUI_USERNAME=admin
# Password hash (bcrypt) — generated automatically during setup
# PARSEDMARC_GUI_PASSWORD_HASH=
# JWT signing key — generated automatically during setup
# PARSEDMARC_SECRET_KEY=

# Server
PARSEDMARC_HOST=0.0.0.0
PARSEDMARC_PORT=8000

# CORS (comma-separated list of allowed origins)
PARSEDMARC_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
PARSEDMARC_LOG_LEVEL=INFO
